<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/curve"
    android:orientation="horizontal"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/roundedImage"
            android:src="@drawable/gr" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name"
                android:textColor="@color/primaryBlack"
                android:textSize="@dimen/title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/eightPadding"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/fourPadding"
                android:paddingBottom="@dimen/fourPadding"
                android:paddingStart="@dimen/eightPadding"
                android:paddingEnd="@dimen/eightPadding"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/red"
                android:padding="4dp"
                android:text="@string/hours"
                android:textColor="@color/white"
                android:textSize="@dimen/body"
                app:cornerRadius="100dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eightPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/position"
                android:textColor="@color/secondaryBlack"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@string/nationality"
                android:layout_marginEnd="@dimen/eightPadding"

                android:textColor="@color/secondaryBlack"
                android:textSize="@dimen/body" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eightPadding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/fourPadding"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/baseline_location_on_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UK"
                android:textColor="@color/black"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="5 Days ago"
                android:layout_marginEnd="@dimen/eightPadding"
                android:textColor="@color/gray"
                android:textSize="@dimen/body" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eightPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 Reviews"
                android:textColor="@color/primaryBlack"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/eightPadding"
                android:text="4.5"
                android:textColor="@color/primaryBlack"
                android:textSize="@dimen/body" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/fourPadding"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/baseline_star_24" />




        </LinearLayout>

    </LinearLayout>


</LinearLayout>